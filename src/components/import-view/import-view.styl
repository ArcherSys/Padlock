@import "../../styles/config";
@import "../view/view";
@import "nib";

.flex-wrapper {
    width: 100%;
    height: 100%;
    
    display: flex;
    flex-direction: column;
}

textarea {
    font-family: monospace;
    font-weight: inherit;
    border: none;
    background: #fff;
    margin: 0;
    display: block;
    padding: 15px;
    font-size: 12px;
    margin: 10px;
    color: $placeholder-color;
    border-radius: 0;

    appearance: none;
    flex: 1;
}

.import-button {
    display: block;
    margin: 0 10px 10px 10px;
}